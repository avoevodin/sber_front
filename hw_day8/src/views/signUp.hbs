<div class="d-flex justify-content-center mt-5">
	<form name="signupform" method="POST" action="/auth/signup">
		<div class="mb-3">
			<input name="email" type="email" class="form-control" placeholder="email" aria-describedby="emailHelp">
			<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
		</div>
		<div class="mb-3">
			<input name="name" type="text" class="form-control" placeholder="username">
		</div>
		<div class="mb-3">
			<input name="avatar" type="text" class="form-control" placeholder="link to your avatar">
		</div>
		<div class="mb-3">
			<input name="password" type="password" placeholder="password" class="form-control">
		</div>
		<div class="d-flex justify-content-center">
			<button type="submit" class="btn btn-primary">Sing up</button>
		</div>
	</form>
</div>