<section class="container d-flex justify-content-center my-2">
    <form class="d-flex flex-column col-4" action="/addpost" method="POST">
        <div class="mb-2">
            <input name="username" type="text" class="form-control" placeholder="username">
        </div>
        <div class="mb-2">
            <textarea name="message" class="form-control" rows="3" placeholder="input your message"></textarea>
        </div>
        <div class="mb-2">
            <input name="image" type="text" class="form-control" placeholder="input image link">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary col-6">Post</button>
        </div>
    </form>
</section>

<hr>

<section class="container d-flex flex-column align-items-center">

    {{#each listOfPosts}}

        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                <img src="{{this.image}}" class="img-fluid rounded-start" alt="Image not found">
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title" style="color: blue">{{this.username}}:</h5>
                    <p class="card-text">{{this.message}}</p>
                    <p class="card-text"><small class="text-muted">Posted at <span>{{this.date}}</span></small></p>
                </div>
                </div>
            </div>
        </div>

    {{/each}}

</section>